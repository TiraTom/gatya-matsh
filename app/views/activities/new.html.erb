<h2>新規アクティビティ 登録画面</h2>

<% flash[:notice] %>
<% flash[:alert] %>

<% if @activity.errors.any? %>
  <%= @activity.errors.full_messages.each do |err_msg| %>
    <li><%= err_msg %></li>
  <% end %>
<% end %>

<div class="col-md-8 col-md-offset-3">
  <%= render :partial => "form", :locals => { activity: @activity, button: "作成" }%>
</div>

<%= link_to "戻る", activities_path, class: "btn btn-default"%>
